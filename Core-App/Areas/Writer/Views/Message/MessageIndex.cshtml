    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@* @{
	string color = null;
} *@
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Gelen Kutusu</h4>

			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>

							<th>#</th>
							<th>Konu</th>
							<th>Gönderen</th>
							<th>Detaylar</th>
							
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							@* if (item.Status == true)
							{
								color = "badge badge-success";
							}
							if (item.Status == false)
							{
								color = "badge badge-danger";
							} *@
							<tr>
								<td>@item.WriterMessageID</td>
								<td>@item.Subject</td>
								<td>@item.Date.ToString("dd-MM-yyy")</td>
								@* <td>@item.Content</td>
								<td><label class="@color">@(item.Status == true ? "Yeni Duyuru" : "Biten Duyuru")</label></td> *@
								<td><a href="/Writer/Default/AnnouncementDetails/@item.WriterMessageID/" class="btn btn-outline-primary">Detay</a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
