@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimlerim</h4>
            <p class="card-description"> Lütfen deneyim bilgilerini giriniz. </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Deneyim Adı</label>
                    <input type="text" class="form-control" placeholder="ör : Full Stack Development" name="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Şirket Adı ve Tarih</label>
                    <input type="text" class="form-control" placeholder="ör : Coder Inc. (2020-2021)" name="Date">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Ünvanınız</label>
                    <input type="text" class="form-control" placeholder="ör : Yazılım Geşiştirici" name="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Resim Yolu (.svg)</label>
                    <input type="text" class="form-control" placeholder="ör : /Template/images/services/full-stack.svg" name="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <textarea class="form-control" rows="4" placeholder="ör : Bu iş yerinde edindiğiniz deneyimlerden kısaca bahsediniz" name="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Deneyim Ekle</button>
                <button class="btn btn-dark">Vazgeç</button>
            </form>
        </div>
    </div>
</div>
